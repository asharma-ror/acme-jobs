
  <div class="text-right">
    <%= link_to 'Create Job', new_admin_jobs_path, class: 'btn btn-primary' %>
  </div>
  <h1> Jobs </h1>
  <% if @jobs.present? %>
     <% @jobs.each do |job| %>

        <div class="job-row border">
          <h3><%= link_to job.title, job_path(job) %></h3>
          <div>
            <%= job.description %>
          </div>
          <small>
            Closing Date: <%= job.closing_date.strftime("%d %B %Y") %>
          </small>
          <div class="text-right">
            <span class="candidate-link">
              <%= link_to 'Applicant List', job_applicants_path(job) %>
            </span>
            <%= link_to 'Apply', new_job_applicant_path(job) %>
          </div>
        </div>
         <br/>
     <% end %>
  <% else %>
    <tr>
      <td colspan="5">Currrently there's no record to display.</td>
    </tr>
  <% end %>


<div>
  <%= will_paginate @jobs, renderer: BootstrapPagination::Rails %>
</div>
