<%= link_to 'Create Job', new_admin_jobs_path, class: 'text-right' %>
<h1> Jobs </h1>



<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Closing Date</th>
    <th>Action </th>
    <th> </th>
    <th> </th>
  </tr>

  <% @jobs.each do |job| %>
    <tr>
      <td><%= job.title %></td>
      <td><%= job.description %></td>
      <td><%= job.closing_date.strftime("%b %d, %Y") %></td>
      <td><%= link_to 'Show', job_path(job) %></td>
      <td><%= link_to 'Apply', apply_job_path(job) %></td>
    </tr>
  <% end %>
</table>
