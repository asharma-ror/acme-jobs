<%= link_to 'Show Jobs', jobs_path %>
<h1> Candidate for <%= @job.title.capitalize %> </h1>

<% if @candidates.present? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
      </tr>
    </thead>
    <tbody>
      <% @candidates.each do |candidate| %>
        <tr>
          <td><%= candidate.name %></td>
          <td><%= candidate.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <tr>
    <td colspan="5">Currrently there's no record to display.</td>
  </tr>
<% end %>

<div>
  <%= will_paginate @candidates, renderer: BootstrapPagination::Rails %>
</div>


